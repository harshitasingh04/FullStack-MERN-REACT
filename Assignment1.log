3.WAP to print area and perimeter of rectangle , taking input from the user , using prompt

function areaAndPerimeter(){
    var length = prompt("Please enter the length");
    var width = prompt("Please enter the width");
    var area = 0;
    var perimeter = 0;
    var calculate = function(){
        area = length * width;
        perimeter = 2 *length + 2*width;
        console.log("Area of the rectangle is " +area);
        console.log("Perimeter of the rectangle is " +perimeter);
    }
    return calculate();
}
